{
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "/.*\\.(test|spec)?\\.(ts|tsx)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "\\.(scss|css)$": "<rootDir>/styleMock.js"
    },
    "setupFilesAfterEnv": [
        "@testing-library/jest-dom"
      ]
}